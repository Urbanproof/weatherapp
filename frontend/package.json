{
  "name": "weatherapp-frontend",
  "version": "0.0.1",
  "description": "Weatherapp exercise frontend",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrako/weatherapp.git"
  },
  "author": "Marko Klemetti <marko.klemetti@gmail.com>",
  "license": "UNLICENSED",
  "config": {
    "name": "weatherapp_frontend",
    "port": 8000,
    "endpoint": "http://localhost:9000/api"
  },
  "scripts": {
    "start": "node_modules/.bin/webpack serve --config webpack.config.js --progress --inline --color",
    "build": "node_modules/.bin/webpack --config webpack.config.js --progress --color",
    "lint": "node_modules/.bin/eslint --ext .js --ext .jsx .",
    "docker": "npx npm-run-all -s docker:stop docker:build docker:run",
    "docker-dev": "npx npm-run-all -s docker:stop docker:build-dev docker:run-dev",
    "docker:stop": "docker stop $npm_package_config_name || true && docker rm $npm_package_config_name || true",
    "docker:build": "docker build -t $npm_package_config_name --build-arg WEATHERAPI_ENDPOINT=$npm_package_config_endpoint .",
    "docker:build-dev": "docker build -t $npm_package_config_name:dev --build-arg PORT=$npm_package_config_port --target=dev-stage .",
    "docker:run": "docker run --rm -d -p 80:80 --name $npm_package_config_name $npm_package_config_name",
    "docker:run-dev": "docker run --init --rm -d -p $npm_package_config_port:$npm_package_config_port -v $(pwd)/src:/usr/app/src --env-file .env --name $npm_package_config_name $npm_package_config_name:dev"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.2.1",
    "eslint": "^7.12.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.5",
    "html-webpack-plugin": "^4.5.0",
    "terser-webpack-plugin": "^5.0.1",
    "webpack": "^5.2.0",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.2.0"
  }
}

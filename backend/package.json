{
  "name": "weatherapp-backend",
  "version": "0.0.1",
  "description": "Weatherapp exercise backend",
  "author": "Marko Klemetti <marko.klemetti@gmail.com>",
  "license": "UNLICENSED",
  "config": {
    "name": "weatherapp_backend",
    "localPort": 9000
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "DEBUG=weathermap ./node_modules/.bin/nodemon src/index.js",
    "lint": "eslint src/*.js",
    "docker": "npx npm-run-all -s docker:stop docker:build docker:run",
    "docker-dev": "npx npm-run-all -s docker:stop docker:build-dev docker:run-dev",
    "docker:stop": "docker stop $npm_package_config_name || true && docker rm $npm_package_config_name || true",
    "docker:build": "npx env-cmd --no-override -f .env docker build -t $npm_package_config_name .",
    "docker:build-dev": "npx env-cmd --no-override -f .env docker build -t $npm_package_config_name --target=dev-stage .",
    "docker:run": "docker run --rm -d -p $npm_package_config_localPort:9000 --env-file .env --name $npm_package_config_name $npm_package_config_name",
    "docker:run-dev": "docker run --init --rm -d -p $npm_package_config_localPort:9000 -v $(pwd)/src:/usr/app/src --env-file .env --name $npm_package_config_name $npm_package_config_name npm run dev"
  },
  "dependencies": {
    "debug": "^4.2.0",
    "kcors": "^2.2.2",
    "koa": "^2.13.0",
    "koa-json": "^2.0.2",
    "koa-router": "^9.4.0",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.12.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "nodemon": "^2.0.6"
  }
}
